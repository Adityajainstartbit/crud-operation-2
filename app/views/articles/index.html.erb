
<html lang="en">
<head>
  <title>Bootstrap Example</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.3/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
</head>
<body style="height: 100vh;">
	<div id="page-content">
<h1 class="text-center mt-4">All the article below</h1>

	<%= link_to 'Create',new_article_path, class: "btn btn-success create_b  " %> 

<% @allarticles.each do |a|%>
<div class="row justify-content-md-center	">
	<div class="col_8 ">
<div class="card custom-card my-2 text-center">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body">
    <h5 class="card-title"><%= a.title %></h5>
    <p class="card-text"><%= truncate(a.description,length: 100) %> </p>
    <!-- <a href="#" class="btn btn-success">view</a> -->
    
   
    <%= link_to "View", article_path(a), class: "btn btn-outline-success" %>
            <%= link_to "edit", edit_article_path(a), class: "btn btn-outline-info" %>
            <%= link_to "Delete", article_path(a), class: "btn btn-outline-danger", method: :delete, data: {confirm: "Article will be delete?"} %>

     <!--  <a href="#" class="btn btn-success">edit</a>
        <a href="#" class="btn btn-danger">delete</a>  -->


  </div>
  <div class="card-footer text-muted">
    2 days ago
  </div>
</div>
</div>
</div>
</div>
<% end %>
<table class="table table-dark">
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th colspan="3">Action</th>
	</thead>
	<tbody>
		<% @allarticles.each do |a|%>
		 <tr>
		 	<td><%= a.title %></td>
		 	<td><%= a.description %></td>

		 	
		 	<td><%= link_to 'Delete', article_path(a), method: :delete ,data:{ confirm: "data will be deleted"}%></td>
		 	<td><%= link_to 'Edit', edit_article_path(a)%></td>
		 	<td><%= link_to 'show', article_path(a)%></td>

		 </tr>
		 <% end %>
	</tbody>

</table>
<%= link_to 'create new article',new_article_path %>
<body>