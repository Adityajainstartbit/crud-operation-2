<h1>this is article</h1>
<table class="table table-dark">
	<thead>
		<th>Title</th>
		<th>Description</th>
		<th colspan="3">Action</th>
	</thead>
	<tbody>
		<% @allarticles.each do |a|%>
		 <tr>
		 	<td><%= a.title %></td>
		 	<td><%= a.description %></td>

		 	
		 	<td><%= link_to 'Delete', article_path(a), method: :delete ,data:{ confirm: "data will be deleted"}%></td>
		 	<td><%= link_to 'Edit', edit_article_path(a)%></td>
		 	<td><%= link_to 'show', article_path(a)%></td>

		 </tr>
		 <% end %>
	</tbody>

</table>
